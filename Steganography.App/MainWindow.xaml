<Window x:Class="Steganography.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Steganography.App"
        mc:Ignorable="d"
        Title="Steganography Encoder/Decoder" Height="450" Width="800">
    <Grid>

        <TabControl x:Name="tabControl">
            <TabItem Header="Encoder">
                <Grid Background="#FFE5E5E5">
                    <local:EncoderControl />
                </Grid>
            </TabItem>
            <TabItem Header="Decoder">
                <Grid Background="#FFE5E5E5">
                    <local:DecoderControl />
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
